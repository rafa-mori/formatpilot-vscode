{
  "name": "formatpilot",
  "displayName": "FormatPilot",
  "description": "ðŸš€ Convert text between multiple formats (Markdown â†” LinkedIn â†” HTML)",
  "version": "0.2.0",
  "publisher": "faelmori",
  "icon": "icon.png",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Formatters",
    "Other"
  ],
  "keywords": [
    "markdown",
    "linkedin",
    "html",
    "text",
    "converter",
    "formatter"
  ],
  "activationEvents": [
    "onCommand:formatpilot.convertText"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "formatpilot.convertText",
        "title": "Convert Text",
        "category": "FormatPilot"
      },
      {
        "command": "formatpilot.convertToLinkedIn",
        "title": "Convert to LinkedIn",
        "category": "FormatPilot"
      },
      {
        "command": "formatpilot.convertToHTML",
        "title": "Convert to HTML",
        "category": "FormatPilot"
      },
      {
        "command": "formatpilot.convertToMarkdown",
        "title": "Convert to Markdown",
        "category": "FormatPilot"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "submenu": "formatpilot.submenu",
          "when": "editorHasSelection",
          "group": "1_modification@1"
        }
      ],
      "formatpilot.submenu": [
        {
          "command": "formatpilot.convertToLinkedIn",
          "when": "editorHasSelection"
        },
        {
          "command": "formatpilot.convertToHTML",
          "when": "editorHasSelection"
        },
        {
          "command": "formatpilot.convertToMarkdown",
          "when": "editorHasSelection"
        }
      ]
    },
    "submenus": [
      {
        "id": "formatpilot.submenu",
        "label": "ðŸš€ FormatPilot"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "esbuild src/extension.ts --bundle --outfile=dist/extension.js --external:vscode --format=cjs --platform=node",
    "watch": "npm run compile -- --watch",
    "package": "npm run compile -- --minify",
    "test": "node ./out/test/runTest.js",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "lint:fix": "eslint src --ext ts --fix"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/node": "16.x",
    "@typescript-eslint/eslint-plugin": "^6.4.1",
    "@typescript-eslint/parser": "^6.4.1",
    "eslint": "^8.47.0",
    "esbuild": "^0.19.2",
    "typescript": "^5.1.6",
    "@vscode/test-electron": "^2.3.4"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/faelmori/formatpilot-vscode.git"
  },
  "bugs": {
    "url": "https://github.com/faelmori/formatpilot-vscode/issues"
  },
  "homepage": "https://github.com/faelmori/formatpilot-vscode#readme",
  "license": "MIT"
}
}
