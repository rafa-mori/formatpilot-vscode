{
  "name": "formatpilot",
  "displayName": "FormatPilot: Text Converter",
  "description": "üöÄ Convert selected text between multiple formats (Markdown ‚Üî LinkedIn ‚Üî HTML) with intelligent dependency management using uv",
  "version": "0.1.0",
  "publisher": "formatpilot",
  "icon": "docs/assets/favicon.ico",
  "engines": {
    "vscode": "^1.100.0"
  },
  "categories": [
    "Formatters",
    "Other"
  ],
  "keywords": [
    "markdown",
    "linkedin",
    "html",
    "text",
    "converter",
    "formatter",
    "python",
    "uv"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "formatpilot.convertText",
        "title": "üöÄ FormatPilot: Convert Selected Text",
        "category": "FormatPilot"
      },
      {
        "command": "formatpilot.setup",
        "title": "‚öôÔ∏è FormatPilot: Setup Environment",
        "category": "FormatPilot"
      },
      {
        "command": "formatpilot.checkStatus",
        "title": "üîç FormatPilot: Check Status",
        "category": "FormatPilot"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "formatpilot.convertText",
          "when": "editorHasSelection",
          "group": "1_modification@1"
        }
      ],
      "commandPalette": [
        {
          "command": "formatpilot.convertText",
          "when": "editorHasSelection"
        }
      ]
    },
    "configuration": {
      "title": "FormatPilot",
      "properties": {
        "formatpilot.pythonPath": {
          "type": "string",
          "default": "",
          "description": "Custom Python executable path (leave empty for auto-detection)"
        },
        "formatpilot.useUv": {
          "type": "boolean",
          "default": true,
          "description": "Use uv for package management instead of pip"
        },
        "formatpilot.autoInstall": {
          "type": "boolean",
          "default": true,
          "description": "Automatically install missing dependencies"
        },
        "formatpilot.showNotifications": {
          "type": "boolean",
          "default": true,
          "description": "Show success/error notifications"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.100.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "eslint": "^9.25.1",
    "esbuild": "^0.25.3",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.8.3",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.5.2"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/faelmori/formatpilot-vscode.git"
  },
  "bugs": {
    "url": "https://github.com/faelmori/formatpilot-vscode/issues"
  },
  "homepage": "https://github.com/faelmori/formatpilot-vscode#readme",
  "license": "MIT",
  "author": {
    "name": "Rafael Mori",
    "email": "faelmori@gmail.com",
    "url": "https://github.com/faelmori"
  },
  "galleryBanner": {
    "color": "#1e1e1e",
    "theme": "dark"
  }
}
